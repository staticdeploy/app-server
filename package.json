{
  "name": "@staticdeploy/app-server",
  "version": "1.1.0",
  "description": "Serve and apply runtime configuration to static apps",
  "keywords": [
    "static",
    "server",
    "configuration",
    "create-react-app"
  ],
  "scripts": {
    "precommit": "yarn lint",
    "compile": "tsc",
    "prettier": "prettier 'src/**/*.ts' 'test/**/*.ts'",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:ts-lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:ts-lint",
    "test": "mocha --compilers ts:ts-node/register --recursive",
    "coverage": "nyc -r html -r lcov -r text-summary --extension .ts npm test",
    "publish-coverage": "codecov"
  },
  "main": "./lib/index.js",
  "bin": {
    "app-server": "./bin/app-server.js",
    "dev-config-server": "./bin/dev-config-server.js"
  },
  "files": [
    "index.js",
    "lib",
    "docs"
  ],
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/app-server.git"
  },
  "homepage": "https://github.com/staticdeploy/app-server",
  "bugs": {
    "url": "https://github.com/staticdeploy/app-server/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/cheerio": "^0.22.1",
    "@types/connect-history-api-fallback": "^1.3.0",
    "@types/cors": "^2.8.1",
    "@types/debug": "^0.0.30",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.36",
    "@types/fs-readdir-recursive": "^1.0.0",
    "@types/lodash": "^4.14.74",
    "@types/mocha": "^2.2.41",
    "@types/morgan": "^1.7.33",
    "@types/serve-static": "^1.7.32",
    "@types/supertest": "^2.0.3",
    "@types/yargs": "^8.0.2",
    "chai": "^4.0.2",
    "codecov": "^2.3.0",
    "create-fs-tree": "^1.0.0",
    "husky": "^0.14.3",
    "mocha": "^3.4.2",
    "nyc": "^11.0.2",
    "prettier": "^1.4.4",
    "supertest": "^3.0.0",
    "ts-node": "^3.1.0",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.3.4",
    "vm2": "^3.4.6"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "connect-history-api-fallback": "^1.3.0",
    "cors": "^2.8.4",
    "debug": "^3.0.1",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "fs-readdir-recursive": "^1.0.0",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "serve-static": "^1.12.4",
    "yargs": "^9.0.1"
  }
}
