{
  "name": "@staticdeploy/app-server",
  "description": "Serve and apply runtime configuration to static apps",
  "version": "3.0.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "bin": {
    "app-server": "./bin/app-server.js"
  },
  "files": [
    "bin",
    "lib",
    "docs"
  ],
  "author": "Paolo Scanferla <paolo.scanferla@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/staticdeploy/app-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/staticdeploy/app-server.git"
  },
  "bugs": {
    "url": "https://github.com/staticdeploy/app-server/issues"
  },
  "keywords": [
    "static",
    "server",
    "configuration",
    "create-react-app"
  ],
  "scripts": {
    "compile": "tsc",
    "prettier": "prettier src/**/*.ts test/**/*.ts docs/**/*md",
    "prettify": "yarn prettier --write",
    "lint:prettier": "yarn prettier --list-different",
    "lint:tslint": "tslint src/**/*.ts test/**/*.ts",
    "lint": "yarn lint:prettier && yarn lint:tslint",
    "test": "NODE_ENV=test mocha --exit -r ts-node/register --watch-extensions ts 'test/**/*.ts'",
    "coverage": "nyc --all yarn test",
    "publish-coverage": "codecov",
    "start": "node bin/app-server.js"
  },
  "dependencies": {
    "@staticdeploy/core": "^0.12.2",
    "@staticdeploy/serve-static": "^0.12.2",
    "bunyan": "^1.8.12",
    "bunyan-middleware": "^1.0.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/bunyan": "^1.8.6",
    "@types/chai": "^4.2.0",
    "@types/cheerio": "^0.22.13",
    "@types/express": "^4.17.1",
    "@types/fs-extra": "^8.0.0",
    "@types/lodash": "^4.14.138",
    "@types/mocha": "^5.2.7",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "@types/yargs": "^13.0.2",
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.3",
    "codecov": "^3.5.0",
    "create-fs-tree": "^1.0.0",
    "decache": "^4.5.1",
    "husky": "^3.0.4",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2",
    "uuid": "^3.3.3",
    "vm2": "^3.8.3"
  }
}
